generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/ukl"
}

model admin {
  adminId   Int      @id @default(autoincrement())
  name      String   @default("")
  email     String   @default("")
  password  String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model order_detail {
  detail_id    Int        @id @default(autoincrement())
  order_id     Int        @default(0)
  food_id      Int        @default(0)
  quantity     Int        @default(0)
  price        Float      @default(0) @db.Double
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  order_detail order_list @relation(fields: [order_id], references: [list_id])
  food_detail  food       @relation(fields: [food_id], references: [item_id])
}

model order_list {
  list_id       Int            @id @default(autoincrement())
  customer_name String         @default("")
  table_number  String         @default("")
  order_date    String         @default("")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  order_detail  order_detail[]
}

model food {
  item_id      Int            @id @default(autoincrement())
  name         String         @default("")
  spicy_level  String         @default("")
  price        Float          @default(0) @db.Double
  image        String         @default("")
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  order_detail order_detail[]
}
